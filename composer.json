{
    "name": "weissheiten/base-neos-distribution",
    "description" : "TYPO3 Neos - Weissheiten Base Distribution",
    "license": "GPL-3.0+",    
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "repositories": [
      {
        "type": "vcs",
        "url":  "git@bitbucket.org:Weissheiten/billardcafe.home.git"
      },
      {
        "type": "vcs",
        "url":  "https://github.com/Weissheiten/Weissheiten.Neos.Bootstrap.git"
      },
      {
        "type": "vcs",
        "url":  "https://github.com/Weissheiten/Weissheiten.News.git"
      }
    ],
    "require": {        
	"typo3/neos-base-distribution": "^2.0",
        "weissheiten/news": "dev-master",
        "weissheiten/neos-bootstrap": "dev-master",
        "weissheiten/billardcafe-home" : "2.0.*"      
    },
    "require-dev": {
        "typo3/buildessentials": "dev-master",
        "mikey179/vfsstream": "1.4.*",
        "phpunit/phpunit": "4.5.*",
        "flowpack/behat": "dev-master"
    },
    "suggest": {
        "ext-pdo_sqlite": "For running functional tests out-of-the-box this is required"
    },
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update":"TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install":"TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
